// Prisma Schema for The Naminator
// Uses PostgreSQL (Neon or Prisma Postgres)

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

// ============================================================
// Auth.js (NextAuth v5) Models
// These models are required by the Prisma Adapter for Auth.js
// Docs: https://authjs.dev/getting-started/adapters/prisma
// ============================================================

model User {
  id            String    @id @default(cuid())
  name          String?
  email         String?   @unique
  emailVerified DateTime?
  image         String?
  accounts      Account[]
  sessions      Session[]

  // Relation to app data
  combinationSets NameCombinationSet[]
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String? @db.Text
  access_token      String? @db.Text
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String? @db.Text
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

// ============================================================
// Application Models
// ============================================================

model NameCombinationSet {
  id        Int             @id @default(autoincrement())
  name1     String
  name2     String
  createdAt DateTime        @default(now())
  userId    String
  user      User            @relation(fields: [userId], references: [id], onDelete: Cascade)
  results   GeneratedName[]
}

model GeneratedName {
  id       Int                @id @default(autoincrement())
  name     String
  goodness Float
  setId    Int
  set      NameCombinationSet @relation(fields: [setId], references: [id], onDelete: Cascade)
}
